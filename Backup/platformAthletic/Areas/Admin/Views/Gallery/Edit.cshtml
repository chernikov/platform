@model platformAthletic.Models.ViewModels.GalleryView
@{
    ViewBag.Title = Model.ID == 0 ? "Add Gallery" : "Edit Gallery";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header {
    <script type="text/javascript" src="/Media/scripts/admin/gallery.js"></script>
}
<h2>@(Model.ID == 0 ? "Add Gallery" : "Edit Gallery")</h2>
<p></p>
@using (Html.BeginForm("Edit", "Gallery", FormMethod.Post, new { @class = "form-horizontal" }))
{
	<fieldset>
		@Html.Hidden("ID", Model.ID)
		@Html.Hidden("ImagePath", Model.ImagePath)

         <div class="control-group">
            <label class="control-label" for="Text">
                Image
            </label>
            <div class="controls">
                <div id="UploadImage">
                    Upload 
                </div>
            </div>
        </div>
        <div id="ImagePreviewWrapper" style="@(!string.IsNullOrWhiteSpace(Model.ImagePath) ? "" : "display : none;")">
            <img src="@Model.ImagePath" alt="" id="ImagePreview"/>
        </div>

	   <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Save
			</button>
            @Html.ActionLink("Cancel", "Index", null, null, new { @class = "btn" })
        </div>
	</fieldset>
}
