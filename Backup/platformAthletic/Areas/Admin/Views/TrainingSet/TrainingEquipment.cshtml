@model platformAthletic.Models.ViewModels.TrainingEquipmentView


<div class="btn remove-line">Remove</div>
@{
    var guid = Guid.NewGuid(); 
}

@Html.Hidden("TrainingEquipments.index", guid.ToString("N"))
@Html.Hidden("TrainingEquipments[" + guid.ToString("N") + "].ID", Model.ID)
<div class="control-group">
    <label class="control-label" for="Name">
        Training
    </label>
    <div class="controls">
        @Html.DropDownList("TrainingEquipments[" + guid.ToString("N") + "].TrainingID", Model.SelectListTrainingID)
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="Name">
        Priority
    </label>
    <div class="controls">
        @Html.TextBox("TrainingEquipments[" + guid.ToString("N") + "].Priority", Model.Priority)
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="Name">
        Equipment
    </label>
    <div class="controls">
        @Html.DropDownList("TrainingEquipments[" + guid.ToString("N") + "].EquipmentID", Model.SelectListEquipmentID)
    </div>
</div>

<div class="control-group">
    <label class="control-label" for="Name">
        Equipment 2
    </label>
    <div class="controls">
        @Html.DropDownList("TrainingEquipments[" + guid.ToString("N") + "].Equipment2ID", Model.SelectListEquipment2ID)
    </div>
</div>
