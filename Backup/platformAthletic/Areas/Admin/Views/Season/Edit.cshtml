@model platformAthletic.Models.ViewModels.SeasonView
@{
    ViewBag.Title = Model.ID == 0 ? "Add Season" : "Edit Season";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>@(Model.ID == 0 ? "Add Season" : "Edit Season")</h2>
<p></p>
@using (Html.BeginForm("Edit", "Season", FormMethod.Post, new { @class = "form-horizontal" }))
{
	<fieldset>
        @Html.Hidden("ID", Model.ID)
		<div class="control-group">
            <label class="control-label" for="Type">
                Type
			</label>
            <div class="controls">
				@Html.DropDownList("Type", Model.SelectListType)
            </div>
        </div>
		<div class="control-group">
            <label class="control-label" for="Name">
                Name
			</label>
            <div class="controls">

				@Html.TextBox("Name", Model.Name)
                @Html.ValidationMessage("Name")
            </div>
        </div>
	   <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Save
			</button>
            @Html.ActionLink("Cancel", "Index", null, null, new { @class = "btn" })
        </div>
	</fieldset>
}
