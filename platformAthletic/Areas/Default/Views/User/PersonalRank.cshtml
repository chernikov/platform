@model User
@{
    var rank = (RankInfo)ViewBag.RankInfo;
    var currentUser = ((platformAthletic.Controllers.BaseController)ViewContext.Controller).CurrentUser;
}
<table class="leaderboard-table table personal" id="PersonalRankWrapper">
    <thead>
        <tr class="header">
            <td colspan="4">
                <div class="pull-right">
                    @if (currentUser != null)
                    {
                        <a href="/leaderboard" class="btn btn-large btn-primary">LEADERBOARD</a>
                    }
                </div>
                <h1>LEADERBOARD RANKS</h1>
            </td>
        </tr>
    </thead>
    <tbody>
        <tr class="header">
            <td style="width:25%">&nbsp;</td>
            <td style="width:25%" class="header squat">SQUAT</td>
            <td style="width:25%" class="header bench">BENCH</td>
            <td style="width:25%" class="header clean">CLEAN</td>
        </tr>
        <tr>
            <td class="center">
                <h2>NATION</h2>
            </td>
            <td class="nation value">@rank.Nation.Squat<span>@rank.Nation.Squat.Ordinal()</span></td>
            <td class="nation value">@rank.Nation.Bench<span>@rank.Nation.Bench.Ordinal()</span></td>
            <td class="nation value">@rank.Nation.Clean<span>@rank.Nation.Clean.Ordinal()</span></td>
        </tr>
        <tr>
            <td class="center">
                <h2>STATE</h2>
            </td>
            <td class="state value @Model.State.Code.ToLower()">@rank.State.Squat<span>@rank.State.Squat.Ordinal()</span></td>
            <td class="state value @Model.State.Code.ToLower()">@rank.State.Bench<span>@rank.State.Bench.Ordinal()</span></td>
            <td class="state value @Model.State.Code.ToLower()">@rank.State.Clean<span>@rank.State.Clean.Ordinal()</span></td>
        </tr>
    </tbody>
</table>