@model User
@{
    var currentUser = ((platformAthletic.Controllers.BaseController)ViewContext.Controller).CurrentUser;
}
<div class="modal fade user-sbc" id="modalUserSbc" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">SBC VALUES </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    @using (Html.BeginForm("Sbc", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.Hidden("UserSbcID", Model.ID)
                        <div class="row">
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="Squat">Squat</label>
                                </div>
                                <div class="col-xs-6">
                                    @Html.TextBox("UserSbcSquat", Model.Squat, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="Bench">Bench</label>
                                </div>
                                <div class="col-xs-6">
                                    @Html.TextBox("UserSbcBench", Model.Bench, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="Clean">Clean</label>
                                </div>
                                <div class="col-xs-6">
                                    @Html.TextBox("UserSbcClean", Model.Clean, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group text-center margin-top">
                                <button class="btn btn-primary btn-lg" id="UserSbcSaveBtn">SAVE</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
