@model BillingInfoView


@Html.Hidden("BillingInfo.ID", Model.ID)
@Html.Hidden("BillingInfo.AutoDebit", Model.AutoDebit)
@Html.Hidden("BillingInfo.UserID", Model.UserID)

@Html.ValidationMessage("BillingInfo.Payment")

<div class="row">
    <div class="col-lg-6 col-lg-offset-1 col-xs-12">
        <div class="form-group">
            <label for="BillingInfo.NameOnCard"><span class="required">*</span>Name On The Card</label>
            @Html.TextBox("BillingInfo.NameOnCard", Model.NameOnCard, new { @class = "form-control" })
            @Html.ValidationMessage("BillingInfo.NameOnCard")
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-lg-offset-1 col-xs-12">
        <div class="form-group">
            <label for="BillingInfo.BillingAddress"><span class="required">*</span>Billing Address</label>
            @Html.TextBox("BillingInfo.BillingAddress", Model.BillingAddress, new { @class = "form-control" })
            @Html.ValidationMessage("BillingInfo.BillingAddress")
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-3 col-lg-offset-1 col-xs-12">
        <div class="form-group">
            <label for="FirstName"><span class="required">*</span>City</label>
            @Html.TextBox("BillingInfo.City", Model.City, new { @class = "form-control" })
            @Html.ValidationMessage("BillingInfo.City")
        </div>
    </div>
    <div class="col-lg-3  col-xs-12">
        <div class="form-group">
            <label for="BillingInfo.StateID"><span class="required">*</span> State</label>
            <div class="billing-custom-style">
                @Html.DropDownList("BillingInfo.StateID", Model.SelectListStateID, new { @class = "form-control" })
                <div></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3  col-xs-12">
        <div class="form-group">
            <label for="BillingInfo.ZipCode"><span class="required">*</span>Zip</label>
            @Html.TextBox("BillingInfo.ZipCode", Model.ZipCode, new { @class = "form-control" })
            @Html.ValidationMessage("BillingInfo.ZipCode")
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-3  col-lg-offset-1  col-xs-12">
        <div class="form-group">
            <label for="BillingInfo.CardType"><span class="required">*</span> Credit Card Type</label>
            <div class="billing-custom-style">
                @Html.DropDownList("BillingInfo.CardType", Model.SelectListCardType, new { @class = "form-control" })
                <div></div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-lg-offset-1  col-xs-12">
        <div class="form-group">
            <label for="BillingInfo.CreditCardNumber"><span class="required">*</span>Credit Card Number</label>
            @Html.TextBox("BillingInfo.CreditCardNumber", Model.HiddenCreditCardNumber, new { @class = "form-control" })
            @Html.ValidationMessage("BillingInfo.CreditCardNumber")
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-2 col-lg-offset-1  col-xs-6">
        <div class="form-group">
            <label for="BillingInfo.ExpirationMonth"><span class="required">*</span>Exp. Date</label>
            <div class="billing-custom-style">
                @Html.DropDownList("BillingInfo.ExpirationMonth", Model.ExpirationMonthSelectList, new { @class = "form-control" })
                <div></div>
            </div>
        </div>
    </div>
    <div class="col-lg-2  col-xs-6">
        <div class="form-group">
            <label for="BillingInfo.ExpirationYear">&nbsp;</label>
            <div class="billing-custom-style">
                @Html.DropDownList("BillingInfo.ExpirationYear", Model.ExpirationYearSelectList, new { @class = "form-control" })
                <div></div>
            </div>
        </div>
    </div>
    <div class="col-lg-2  col-xs-12">
        <div class="form-group">
            <label for="BillingInfo.CVC"><span class="required">*</span>CVC</label>
            @Html.TextBox("BillingInfo.CVC", Model.CVC, new { @class = "form-control" })
            @Html.ValidationMessage("BillingInfo.CVC")
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-4 col-lg-offset-1 col-xs-12">
        <div class="form-group">
            <label for="BillingInfo.ReferralCode">Referral Code</label>
            <div class="row">
                <div class="col-lg-6 no-padding-left col-xs-8">
                    @Html.TextBox("BillingInfo.ReferralCode", Model.ReferralCode, new { @class = "form-control", id = "ReferralCodeValue" })
                </div>
                <div class="col-lg-6 col-xs-4">
                    <button class="btn btn-billing" id="ApplyReferralCode">Apply</button>
                </div>
            </div>
            <div class="field-validation-error" id="PromoCodeError" style="display :none;">
                Referral code is invalid
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-lg-offset-4  col-xs-12 submit">
        <div class=" pull-right">
            <button class="btn btn-primary btn-lg" id="SubmitBillingBtn">SUBMIT</button>
        </div>
    </div>
</div>