@model User
<div class="row">
    <div class="col-sm-12 col-xs-12 no-padding-left">
        <div class="pull-right team-table-button">
            <a href="@Url.Action("Team", "Table", new { idUsers= Model.ID})" target="_blank">
                <span class="print-icon"></span>
            </a>
        </div>

        <h3>PLAYER INFORMATION</h3>
        <div class="row user">
            <div class="col-sm-6 col-md-6 col-xs-6 no-padding-left">
                <div class="platform-icon">
                    @if (Model.AvatarPath != null)
                    {
                        <img src="@Model.AvatarPath?w=205&h=205&mode=crop&scale=both" />
                    }

                </div>
            </div>
            <div class="col-sm-6 col-md-6 col-xs-6">
                <h1>@Model.FirstName @Model.LastName</h1>
                <div class="measure">
                    <div class="item">
                        <div class="header-wrp">HEIGHT</div>
                        <div class="value-wrp">@Model.Height</div>
                    </div>
                    <div class="item">
                        <div class="header-wrp">WEIGHT (lbs)</div>
                        <div class="value-wrp">@Model.Weight</div>
                    </div>
                </div>

                <div class="power">
                    <div class="item">
                        <div class="header-wrp">SQUAT</div>
                        <div class="value-wrp">
                            <button class="btn btn-danger btn-xs sbc-player-change" data-id="@Model.ID" data-type="squat" data-value="-5">-</button>
                            <div class="value sbcChange clickable" data-id="@Model.ID">@Model.Squat</div>
                            <button class="btn btn-green btn-xs sbc-player-change" data-id="@Model.ID" data-type="squat" data-value="5">+</button>
                        </div>
                    </div>
                    <div class="item">
                        <div class="header-wrp">BENCH</div>
                        <div class="value-wrp">
                            <button class="btn btn-danger btn-xs sbc-player-change" data-id="@Model.ID" data-type="bench" data-value="-5">-</button>
                            <div class="value sbcChange clickable" data-id="@Model.ID">@Model.Bench</div>
                            <button class="btn btn-green btn-xs sbc-player-change" data-id="@Model.ID" data-type="bench" data-value="5">+</button>
                        </div>
                    </div>
                    <div class="item">
                        <div class="header-wrp">CLEAN</div>
                        <div class="value-wrp">
                            <button class="btn btn-danger btn-xs sbc-player-change" data-id="@Model.ID" data-type="clean" data-value="-5">-</button>
                            <div class="value sbcChange clickable" data-id="@Model.ID">@Model.Clean</div>
                            <button class="btn btn-green btn-xs sbc-player-change" data-id="@Model.ID" data-type="clean" data-value="5">+</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clear"></div>

            <div class="row user-sport-position">

                @foreach (var item in Model.SubPositions)
                {

                    <div class="col-sm-6 col-md-6 col-xs-5 no-padding-left no-padding-right">
                        <div class="sport">
                            <div class="header-wrp">SPORT:</div>
                            <div class="value-wrp">@item.Sport.Name</div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-xs-7 no-padding-left no-padding-right">
                        <div class="sport">
                            <div class="header-wrp">POSITION:</div>
                            <div class="value-wrp">@item.FieldPosition.Name</div>
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-12 col-xs-12 text-center view-profile-wrp">
                    <a href="@Url.Action("Index", "User", new {id =Model.ID })" class="btn btn-primary">VIEW PROFILE</a>
                </div>
            </div>



        </div>
    </div>
    <div class="row user-info-attendance">
        <div class="col-sm-12" id="AttendanceMonthWrapper">

            @Html.Action("AttendanceCalendar", "Dashboard", new { id = Model.ID, date = DateTime.Now.Current() })

        </div>
    </div>
    <div class="row" id="PerformanceWrapper">
        <div class="col-sm-12">
            <div id="playerTabWrapper">
                <ul id="playerTabs" class="nav nav-tabs" data-tabs="tabs">
                    <li>
                        <a href="#performance" data-toggle="tab" id="Performance">PERFORMANCE</a>
                    </li>
                    <li class="active">
                        <a href="#attendance" data-toggle="tab">ATTENDANCE</a>
                    </li>
                </ul>
                <div id="playerTabs-content" class="tab-content">
                    <div class="tab-pane performance" id="performance">
                        <div class="row">
                            <div class="col-lg-12 no-padding-right">
                                <div class="pull-right perfomance-change">
                                    <div class="badge badge-performance squat">
                                        <h2 class="text-center">
                                            SQUAT
                                        </h2>
                                        <h1 class="text-center">
                                            @{
                                                var squat = Model.DiffSquat12Week;
                                            }
                                            @if (squat > 0)
                                            {
                                                <text>+@squat</text>
                                            }
                                            else
                                            {
                                                <text>@squat</text>
                                            }
                                        </h1>
                                    </div>
                                    <div class="badge badge-performance bench">
                                        <h2 class="text-center">
                                            BENCH
                                        </h2>
                                        <h1 class="text-center">
                                            @{
                                                var bench = Model.DiffBench12Week;
                                            }
                                            @if (squat > 0)
                                            {
                                                <text>+@bench</text>
                                            }
                                            else
                                            {
                                                <text> @bench</text>
                                            }
                                        </h1>
                                    </div>
                                    <div class="badge badge-performance clean">
                                        <h2 class="text-center">
                                            CLEAN
                                        </h2>
                                        <h1 class="text-center">
                                            @{
                                                var clean = Model.DiffClean12Week;
                                            }
                                            @if (clean > 0)
                                            {
                                                <text>+@clean</text>
                                            }
                                            else
                                            {
                                                <text>@clean</text>
                                            }
                                        </h1>
                                    </div>
                                    <div class="badge badge-performance total">
                                        <h2 class="text-center">
                                            TOTAL
                                        </h2>
                                        <h1 class="text-center">
                                            @{
                                                var total = clean + squat + bench;
                                            }
                                            @if (total > 0)
                                            {
                                                <text>+@total</text>

                                            }
                                            else
                                            {
                                                <text>@total</text>
                                            }
                                        </h1>
                                    </div>
                                </div>

                            </div>
                            <h1 class="performance">LAST 12 WEEKS</h1>
                            <div class="performance-chart">
                                <canvas id="PerformanceChart"></canvas>
                            </div>
                        </div>

                    </div>
                    <div class="tab-pane active attendance" id="attendance">
                        <div class="no-padding-left text-center">
                            <div class="badge badge-attendance">
                                <h2 class="text-center">
                                    ALL-TIME
                                </h2>
                                <h1 class="text-center">
                                    @Model.AllAttendanceCount
                                </h1>
                            </div>
                            <div class="badge  badge-attendance">
                                <h2>
                                    YEAR
                                </h2>
                                <h1 class="text-center">
                                    @Model.YearAttendanceCount
                                </h1>
                            </div>

                            <div class="badge badge-attendance">
                                <h2>
                                    MONTH
                                </h2>
                                <h1 class="text-center">
                                    @Model.MonthAttendanceCount
                                </h1>
                            </div>

                            <div class="badge badge-attendance">
                                <h2>
                                    WEEK
                                </h2>
                                <h1 class="text-center">
                                    @Model.WeekAttendanceCount
                                </h1>
                            </div>
                        </div>
                        <div class="text-center">
                            <a href="/user/@Model.ID" class="btn btn-primary">FULL DETAIL</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
