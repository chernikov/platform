@model IEnumerable<platformAthletic.Model.About>
@{
    ViewBag.Title = "About Us";
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
    var page = ((platformAthletic.Controllers.BaseController)ViewContext.Controller).Pages["about_us"];
}
@section header
{
    <script src="@Url.Content("/Media/scripts/scroll-gallery.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/default/about-us.js")" type="text/javascript"></script>
}
<div class="about-wrp">
    <div class="content">
        <div class="title">
            <h1></h1>
        </div>
        <div class="subtitle">
            “To offer high school programs<br />
            simple, effective, and affordable athletic training solutions through<br />
            the utilization of an easy-to-use web based platform.”
        </div>
        <div class="text">
           @Html.Raw(page)
        </div>
    </div>
    <div class="about-platform">
        <div class="inner">
            <div class="icon-little-right-arrow sprite"></div>
            <div class="text">What People Are Saying About The Platform</div>
        </div>
    </div>
    <div class="bottom-content clear">
        <div class="query-gallery">
            <div class="gallery-wrp">
                <div class="icon-arrow-left sprite">
                </div>
                <div class="content">
                    <div class="container">
                        @foreach (var item in Model)
                        {
                            <div class="item">
                                @Html.Raw(item.Text.NlToBr())
                                <br />
                                <br />
                                @item.Author
                            </div>
                        }
                    </div>
                </div>
                <div class="icon-arrow-right sprite">
                </div>
            </div>
        </div>
    </div>
    <div class="button-wrp">
        <button class="btn-active primaryColorBg" id="buttonNext">Become A Member</button>
    </div>
</div>
