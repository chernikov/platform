@{
    ViewBag.Title = "Who We Are - Platform Athletics";
    Layout = "~/Areas/Default/Views/Shared/_CmsLayoutInner.cshtml";
    var pageParts = ((platformAthletic.Controllers.BaseController)ViewContext.Controller).PageParts;
}

<div class="who-we-are-wrapper position-relative">
    <div class="background"></div>
    <div class="additional-background"></div>
    <div class="block-wrapper">
        <div class="main-title">
            <h1>Our mission: </h1>
            @pageParts["WhoWeAreTitle"]
            <div class="start-image">
                <a href="/join-us">
                    <img src="/Media/images/new/wwastb.png">
                </a>
            </div>
        </div>
    </div>
    <div class="block-wrapper">
        <ul class="additional">
            <li class="separator"></li>
            <li>
                <div class="picture">
                    <img src="/Media/images/new/wwa1.png">
                </div>
                @pageParts["WhoWeAreText1"]

            </li>
            <li class="separator"></li>
            <li>
                <div class="picture">
                    <img src="/Media/images/new/wwa2.png">
                </div>
                @pageParts["WhoWeAreText2"]
            </li>
            <li class="separator"></li>
        </ul>
    </div>
</div>
<div class="biographics">
    <div class="shadow"></div>
    <div class="block-wrapper">
        <div class="item clear">
            <img class="picture" src="/Media/images/new/1.png">
            <h2 class="title">
                <strong>Alex Relph</strong>
                / Co-Founder
                <div class="separator"></div>
                Director of Business
            </h2>
            <div class="description">
                @pageParts["WhoWeAreAuthor1"]
            </div>
        </div>
        <div class="item clear">
            <img class="picture" src="/Media/images/new/3.png">
            <h2 class="title">
                <strong>Sam Breslin</strong>
                / Co-Founder
                <div class="separator"></div>
                Director of Programing
            </h2>
            <div class="description">
                @pageParts["WhoWeAreAuthor2"]
            </div>
        </div>
        <div class="item clear">
            <img class="picture" src="/Media/images/new/2.png">
            <h2 class="title">
                <strong>Justin Belanger</strong>
                <div class="separator"></div>
                Programming Associate
            </h2>
            <div class="description">
                @pageParts["WhoWeAreAuthor3"]
            </div>
        </div>
        <div class="item clear">
            <img class="picture" src="/Media/images/new/4.png">
            <h2 class="title">
                <strong>Geoff Leard</strong>
                <div class="separator"></div>
                Programming Associate
            </h2>
            <div class="description">
                @pageParts["WhoWeAreAuthor4"]
            </div>
        </div>
    </div>
