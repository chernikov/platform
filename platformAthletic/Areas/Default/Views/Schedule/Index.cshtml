@{
    ViewBag.Title = "Scheduling";
    Layout = "~/Areas/Default/Views/Shared/_BootstrapLayout.cshtml";
    var currentUser = ((platformAthletic.Controllers.BaseController)ViewContext.Controller).CurrentUser;
}
@section header
{
    <script src="~/Scripts/default/schedule.js"></script>
}
<div class="container-fluid">
    <div class="side-body">
        <div class="breadcrumb">
            <div class="row">
                <div class="col-lg-12 overflow">
                    <ol>
                        <li><a href="/"><span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;&nbsp; Home</a></li>
                        <li class="active"><a href="/scheduling">Scheduling </a></li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="row row-same-height">
            @if (currentUser.InRoles("coach,assistant"))
            {
                @Html.Action("Group", "Schedule")
            }

            <div class="@(currentUser.InRoles("coach,assistant") ? "col-lg-8" : "col-lg-12") col-sm-12 col-md-12 col-xs-12 schedule-table-wrapper col-lg-height schedule-wrapp" id="TablePart">
                @if (currentUser.OwnTeam != null)
                {
                    @Html.Action("Scheduling", "Schedule")
                }
                else
                {
                    @Html.Action("PersonalScheduling", "Schedule")
                }
            </div>
        </div>

    </div>
</div>