@model platformAthletic.Models.ViewModels.CalendarInfo

@Html.Hidden("TeamID", Model.Team.ID)
@Html.Hidden("GroupID", Model.Group != null ? (int?)Model.Group.ID : null)
@Html.Hidden("Month", Model.Month.ToString("MM\\dd\\yyyy"))

<div class="row calendar-wrapper">
    <h1 class="text-center">
        @if (Model.Group != null)
        {
            @Model.Group.Name.ToUpper()
        }
        else
        {
            @Model.Team.Name.ToUpper()
        }
    </h1>
    <div class="panel attendance-panel">
        <div class="pull-left">
            <a class="btn scheduleMonth" data-month="@Model.Month.AddMonths(-1)"><span class="calendar-arrow-left"></span></a>
        </div>
        <div class="pull-right">
            <a class="btn scheduleMonth" data-month="@Model.Month.AddMonths(1)"><span class="calendar-arrow-right"></span></a>
        </div>
        <h1 class="text-center">@Model.Month.ToString("MMMM yyyy").ToUpper()</h1>
        <div class="clearfix"></div>
    </div>

    <table class="table table-calendar">
        <thead>
            <tr>
                <th>Sun</th>
                <th>Mon</th>
                <th>Tue</th>
                <th>Wed</th>
                <th>Thu</th>
                <th>Fri</th>
                <th>Sat</th>
            </tr>
        </thead>
        <tbody>
            @{
                var currentSunday = Model.Month.AddDays(6).StartOfWeek(DayOfWeek.Sunday);
            }
            @while (currentSunday.Month == Model.Month.Month)
            {
                @Html.Action("CalendarRow", "Schedule", new { date = currentSunday, teamId = Model.Team.ID, groupId = (Model.Group != null ? (int?)Model.Group.ID : null) })
                currentSunday = currentSunday.AddDays(7);
            }
        </tbody>
    </table>
    <div class="calendar-drop-down-list" style="display: none;">
        <div class="list-title">
            @foreach (var season in Model.Seasons)
            {
                <div class="season @(season.ID == Model.Season.ID ? "selected" : "")" data-id="@season.ID">
                    @season.Name
                </div>
            }
        </div>
        @foreach (var season in Model.Seasons)
        {
            <div class="season-data" data-id="@season.ID" style="display: @(season.ID == Model.Season.ID ? "block" : "none");">

                <div class="list">
                    <div class="item season-item" data-id="@season.ID">
                        Start @season.Name
                    </div>
                    @foreach (var cycle in season.SubCycles)
                    {
                        <div class="item cycle-item" data-id="@cycle.ID">
                            Start @cycle.Name
                        </div>
                        foreach (var item in cycle.Macrocycles)
                        {
                            <div class="item team-item" data-id="@item.ID">
                                @item.Name
                            </div>
                        }
                    }
                </div>
            </div>
        }
    </div>
</div>
