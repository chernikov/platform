@{
    var currentUser = ((platformAthletic.Controllers.BaseController)ViewContext.Controller).CurrentUser;
    var controllerName = ViewContext.RequestContext.RouteData.Values["controller"] as string;
    var actionName = ViewContext.RequestContext.RouteData.Values["action"] as string;
}

<h1>Settings </h1>
<ul class="nav">
    <li class="@(controllerName == "Setting" ? "open" : "")">
        <a href="/settings">Account</a>
    </li>
    @if (currentUser != null && currentUser.InRoles("coach"))
    {
        <li class="@(controllerName == "ManageAssistant" ? "open" : "")">
            <a href="/manage-coaches">Manage Coaches</a>
        </li>
        <li class="@(controllerName == "ManagePlayer" ? "open" : "")">
            <a href="/manage-players">Manage Players</a>
        </li>
    }
    @if (currentUser != null && currentUser.InRoles("coach,individual,assistant"))
    {
        <li class="@(controllerName == "Equipment" ? "open" : "")">
            <a href="/equipment">Equipment Log</a>
        </li>
    }
    @if (currentUser != null && currentUser.InRoles("coach,individual"))
    {
        <li class="@(controllerName == "Billing" ? "open" : "")">
            <a href="/billing">Billing</a>
        </li>
    }
</ul>