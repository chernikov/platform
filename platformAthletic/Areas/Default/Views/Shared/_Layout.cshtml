@{
    var banner = new platformAthletic.Model.Banner();
    if (ViewContext.Controller is platformAthletic.Controllers.BaseController) 
    {
        banner = ((platformAthletic.Controllers.BaseController)ViewContext.Controller).Banners["bottom main banner"];
    }
    
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link href="/Media/css/reset.css" rel="stylesheet" type="text/css" />
    <link href="/Media/css/main.css" rel="stylesheet" type="text/css" />
    <link href="/Media/css/datepicker.css" rel="stylesheet" type="text/css" />
    <link href="/Media/css/jquery.jscrollpane.css" rel="stylesheet" type="text/css" />
    @Html.Partial("~/Views/Shared/GoogleAnalytics.cshtml")
</head>
<body>
    <div class="popup-blur-bg" style="display: none;"></div>
    <div class="popup-wrapper" id="PopupWrapper"></div>
    <div class="main-wrapper">
        <header class="clear">
            <div class="logo">
                <a href="/">
                    <img src="/Media/images/logo_53.png" />
                </a>
            </div>
            @Html.Partial("UserLogin")
        </header>
        <nav class="primaryColorBg">
            @Html.Partial("Menu")
            <div class="social-wrapper">
                <div class="header">follow us:</div>
                <ul class="social-buttons">
                    <li>
                        <a href="http://www.facebook.com/pages/Platform-Athletics/180707878738014">
                            <span class="sprite facebook"></span>
                        </a>
                    </li>
                    <li>
                        <a href="https://twitter.com/PLT4M">
                            <span class="sprite twitter"></span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="main">
            @RenderBody()
        </div>
        <footer class="clear">
            <div class="background"></div>
            @if (banner != null)
            {
                <div class="banner">
                    @Html.Raw(banner.Show)
                </div>
            }

            <div class="copyright clear">
                &copy; PLATFORM ATHLETICS, LLC
                <br />
                Website designed by: <a href="http://ditley.com">Chicago Web Design</a>
            </div>
            <nav>
                @Html.Partial("BottomMenu")
            </nav>
            <div class="clear"></div>
            <div class="touch">Get in touch with us: (855) 862-5502</div>
            @*<div id="smsChat" class="to-chat primaryColorBg">click to chat</div>*@
        </footer>
    </div>
