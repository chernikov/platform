@model platformAthletic.Models.Info.FilterCustomAttendanceReport
@{
    ViewBag.Title = "Custom Report Attendance";
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}
@section header
{
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript" src="/Media/scripts/default/attendance-report.js"></script>
    <script type="text/javascript">
        google.load('visualization', '1.0', { 'packages': ['corechart'] });
    </script>
}
<div class="custom-report-wrp all-transparent-wrp">
    <div class="top primaryColorBg">
        <h1>Custom report</h1>
    </div>
    <div class="bottom">
        @using (Html.BeginForm("Attendance", "Report", FormMethod.Get, new { id = "AttendanceReportForm" }))
        {
            @Html.Hidden("TeamID", Model.TeamID)
            <div class="title-wrp clear">
                <div class="name sort">Sort by</div>
                <div class="name from-attendance">From</div>
                <div class="name to">To</div>
            </div>
            <div class="sort-wrp clear">
                <div class="input">
                    <div class="select-wrp">
                        @Html.DropDownList("SelectedType", Model.SelectListType, new { @class = "dropdown-styled" })
                    </div>
                </div>
                <div class="input">
                    <div class="date-wrp">
                        @Html.TextBox("BeginDate", Model.BeginDate.ToString("d"), new { @readonly = "readonly" })
                        <div class="date-icon" id="BeginDateIcon"></div>
                    </div>
                </div>
                <div class="input">
                    <div class="date-wrp">
                        @Html.TextBox("EndDate", Model.EndDate.ToString("d"), new { @readonly = "readonly" })
                        <div class="date-icon" id="EndDateIcon"></div>
                    </div>
                </div>
            </div>
            <div id="AttendanceChartWrapper">
                @*@Html.Partial("AttendanceChart", Model)*@
            </div>
        }
    </div>
</div>

