@model platformAthletic.Model.User

<div class="modal fade" id="modalSendActivation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">SEND ACTIVATION</h4>
            </div>
            <div class="modal-body">
                <p>Message with activation sent successfully to @Model.Email</p>
                <div class="modal-footer text-center">
                    <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
</div>
