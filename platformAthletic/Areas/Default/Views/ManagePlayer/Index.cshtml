@model IEnumerable<User>

@{
    ViewBag.Title = "Manage players";
    Layout = "~/Areas/Default/Views/Shared/_BootstrapLayout.cshtml";
}
@section styles {
    <link href="~/Content/fineuploader.css" rel="stylesheet" />
}
@section header {
    <script src="~/Scripts/jquery.fineuploader-3.0.js"></script>
    <script src="~/Scripts/default/manage-player.js"></script>
}
<div class="container-fluid">
    <div class="side-body">
        <div class="breadcrumb">
            <div class="row">
                <div class="col-lg-12 overflow">
                    <ol>
                        <li><a href="/"><span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;&nbsp; Home</a></li>
                        <li class="active"><a href="/manage-players">Manage Players</a></li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="row settings-wrapper">
            <div class="col-lg-2 col-md-2 settings-menu height no-padding-right no-padding-left  hidden-xs hidden-sm">
                @Html.Partial("SettingMenu")
            </div>
            <div class="col-lg-10 col-md-10 manage-user-wrapper">

                <h2>Manage Players</h2>
                <hr />
                <div class="btn btn-primary btn-lg" id="Create">Create</div>
                <br /><br />
                <table class="table table-coaches">
                    <thead>
                        <tr>
                            <th class="hidden-xs">
                                Name
                            </th>
                            <th class="hidden-lg hidden-md hidden-sm">
                                Info
                            </th>
                            <th class="hidden-xs">
                                Email
                            </th>
                            <th class="hidden-xs">
                                Group
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="name hidden-xs">
                                    <img src="@item.FullAvatarPath?w=24&h=24&mode=crop" class="img-circle" />&nbsp;&nbsp; <span class="user-name">@item.FirstName @item.LastName</span>
                                </td>
                                <td class="hidden-lg hidden-md hidden-sm">
                                    <strong>Name:</strong> @item.FirstName @item.LastName <br />
                                    <strong>Email:</strong> @item.Email <br />
                                    @if (item.Group != null)
                                    {

                                        <strong>Group:</strong> @item.Group.Name

                                    }
                                </td>
                                <td class="hidden-xs">
                                    @item.Email
                                </td>
                                <td class="hidden-xs">
                                    @if (item.Group != null)
                                    {
                                        <span class="value">
                                            @item.Group.Name
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="pull-right">
                                        <button class="btn btn-success btn-margin btn-margin-md editUser" data-id="@item.ID">Edit</button>
                                        <button class="btn btn-primary btn-margin btn-margin-md removeUser" data-id="@item.ID">Remove</button>
                                        <button class="btn btn-success btn-margin btn-margin-md sendActivation" data-id="@item.ID">Send activation</button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>