@model FeedbackView
@{
    ViewBag.Title = "Contact Us - Platform Athletics";
    Layout = "~/Areas/Default/Views/Shared/_BootstrapLayout.cshtml";
}

@*@section header {
        <script type="text/javascript" src="/Media/scripts/select.js"></script>
        <script type="text/javascript" src="/Media/scripts/new/contact.js"></script>
    }*@
<div class="container-fluid">
    <div class="side-body">
        <div class="breadcrumb">
            <div class="row">
                <div class="col-lg-12 overflow">
                    <ol>
                        <li><a href="/"><span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;&nbsp; Home</a></li>
                        <li class="active"><a href="/getting-started">Getting started</a></li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="row settings-wrapper">
            <div class="col-lg-2 col-md-2 col-sm-4 settings-menu height no-padding-right no-padding-left hidden-xs">
                @Html.Partial("HelpMenu")
            </div>
            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-12 help-wrapper">
                <h2>Contact Us</h2>
                <hr />
                <div class="row">
                    <div class="col-lg-8 col-md-7">
                        @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
                        {
                            @Html.Hidden("ID", Model.ID)
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="Name"><span class="required">*</span>Name</label>
                                        @Html.TextBox("Name", Model.Name, new { @class = "form-control" })
                                        @Html.ValidationMessage("Name")
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="Email"><span class="required">*</span>Email</label>
                                        @Html.TextBox("Email", Model.Email, new { @class = "form-control" })
                                        @Html.ValidationMessage("Email")
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="Phone">Phone</label>
                                        @Html.TextBox("Phone", Model.Phone, new { @class = "form-control" })
                                        @Html.ValidationMessage("Phone")
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="School"><span class="required">*</span>School</label>
                                        @Html.TextBox("School", Model.School, new { @class = "form-control" })
                                        @Html.ValidationMessage("School")
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="School"><span class="required">*</span>City</label>
                                            @Html.TextBox("City", Model.City, new { @class = "form-control" })
                                            @Html.ValidationMessage("School")
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="School">State</label>
                                            <div class="billing-custom-style">
                                                @Html.DropDownList("StateID", Model.SelectListStateID, new { @class = "form-control" })
                                                <div></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="Message"><span class="required">*</span>Message</label>
                                        @Html.TextArea("Message", Model.Message, new { @class = "form-control" })
                                        @Html.ValidationMessage("Message")
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <button class="btn btn-primary btn-lg btn-margin btn-margin-md">SUBMIT</button>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-lg-4 col-md-5">
                        <div class="contact-info-wrapper">
                            <h1>Phone & Email</h1>
                            <h3>(855) 862-5502</h3>

                            <h1>Sales:</h1>
                            <a href="mailto:sales@platformathletics.com">sales@platformathletics.com</a>

                            <h1>Customer service:</h1>
                            <a href="mailto:support@platformathletics.com">support@platformathletics.com</a>

                            <h1>Payment & Mail:</h1>
                            <p>
                                815B Boston Post Road<br>
                                Weston, MA 02493<br>
                            </p>

                            <strong>We look forward to speaking with you!</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>