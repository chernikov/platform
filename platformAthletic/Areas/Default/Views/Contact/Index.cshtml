@model platformAthletic.Models.ViewModels.FeedbackView
@{
    ViewBag.Title = "Contact Us - Platform Athletics";
    Layout = "~/Areas/Default/Views/Shared/_CmsLayoutInner.cshtml";
}
@section header {
    <script type="text/javascript" src="/Media/scripts/select.js"></script>
    <script type="text/javascript" src="/Media/scripts/new/contact.js"></script>
}
<div class="contact-wrapper">
    <div class="block-wrapper">
        <h2>have a question?</h2><br>
        <h1>Contact us for more information</h1>
        <div class="contact-form-wrapper">
            @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
            {
                <div class="form-content">
                    <div class="left-form-part">
                        <label for="">name</label>
                        @Html.TextBox("Name", Model.Name)

                        <label for="">* Email</label>
                        @Html.TextBox("Email", Model.Email, new { required = "required" })

                        <label for="">Phone</label>
                        @Html.TextBox("Phone", Model.Phone, new { type = "tel" })
                        <label for="">* School</label>
                        @Html.TextBox("School", Model.School, new { required = "required" })

                        <label for="">* City</label>
                        @Html.TextBox("City", Model.City, new { required = "required" })

                        <label for="">* State</label>
                        @Html.DropDownList("StateID", Model.SelectListStateID, new { @class = "mySelectBoxClass" })
                    </div>
                    <div class="right-form-part">
                        <label class="message-label">* Message</label>
                        <div class="text-area-wrapper">
                            @Html.TextArea("Message", Model.Message, new { required = "required" })
                        </div>
                        <input class="submit" type="submit" value="">
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="contact-info-wrapper">
    <div class="shadow"></div>
    <div class="info">
        <div class="contact-info">
            <strong>COMPANY INFO:</strong><br>
            <strong>
                Platform Athletics
            </strong><br />
            815B Boston Post Road<br>
            Weston, MA 02493<br>
            info@platformathletics.com<br>
            (855) 862-5502
            <div class="bottom-line"></div>
        </div>
        <div class="separator"></div>
        <div class="social-block">
            <h2>Stay connected</h2><br>
            <a href="https://www.facebook.com/Platform.Athletics" class="social-link fb"></a>
            <a href="https://twitter.com/PLT4M" class="social-link tw"></a>
        </div>
    </div>
</div>
