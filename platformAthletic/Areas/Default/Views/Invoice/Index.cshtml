@model platformAthletic.Model.Invoice

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="/Media/css/invoice.css" rel="stylesheet" type="text/css" />
    <link href="/Media/css/print.css" rel="stylesheet" type="text/css" media="print" />
    <meta name="viewport" content="width=device-width" />
    <script src="/Media/scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="/Media/scripts/default/print.js" type="text/javascript"></script>
    <title>Invoice</title>
</head>
<body>
    <div class="print print_2">Print</div>

    <div class="wrapper">

        <div class="logo">
            <img src="/Media/images/logo_table_small.png" />

            <div class="address">
                <strong>Your Organization:</strong><br />
                @Model.NameOfOrganization<br />
                @Model.State.Name<br>
                @Model.PhoneNumber
            </div>
        </div>
        <div class="invoice-head">
            <h1>INVOICE</h1>
            <div>Invoice: @Model.Code</div>
            <div>@Model.DateSent.ToString("d")</div>

            <div class="address">
                <strong>Send Checks To:</strong><br />
                PLATFORM ATHLETICS, LLC<br />
                815 Boston Post Rd Unit B<br />
                Weston, MA 02493<br />
                <em>Please include invoice number on checks</em>
            </div>
        </div>
        <div class="clear"></div>
        <table class="small">
            <thead>
                <tr>
                    <td>P.O.Number</td>
                    <td>Term</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>&nbsp;</td>
                    <td>Net 60</td>
                </tr>
            </tbody>
        </table>
        <br />
        <table class="big">
            <thead>
                <tr>
                    <td>Description</td>
                    <td>Total</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Web-based Training Platform. Team Subscription.<br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                    </td>
                    <td>@Model.TotalSum.ToString("C")</td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Model.TotalSum.ToString("C")</td>
                </tr>
            </tbody>
        </table>
        <footer>
            Make all checks payable to  <strong>PLATFORM ATHLETICS, LLC. THANK YOU FOR YOUR BUSINESS!</strong>
        </footer>
    </div>
    @Html.Partial("~/Views/Shared/GoogleAnalytics.cshtml")
</body>
</html>

