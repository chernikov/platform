@model platformAthletic.Models.ViewModels.TrainingSetView
@{
    ViewBag.Title = Model.ID == 0 ? "Add TrainingSet" : "Edit TrainingSet";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header {
    <script type="text/javascript" src="/Media/scripts/admin/edit-training-set.js"></script>
}
<h2>@(Model.ID == 0 ? "Add TrainingSet" : "Edit TrainingSet")</h2>
<p></p>
@using (Html.BeginForm("Edit", "TrainingSet", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        @Html.Hidden("ID", Model.ID)

        <div class="control-group">
            <label class="control-label" for="DayID">
                Day
            </label>
            <div class="controls">
                @Html.DropDownList("DayID", Model.SelectListDayID)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Phase">
                Phase
            </label>
            <div class="controls">
                @Html.DropDownList("PhaseID", Model.SelectListPhaseID)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                <div class="btn" id="AddExtraLine">Add Extra Line</div>
            </label>
        </div>
        <div class="list" id="TrainingSetList">
            @foreach (var item in Model.TrainingEquipments)
            {
                <div class="TrainingEqupmentWrapper">
                    @Html.Partial("TrainingEquipment", item)
                </div>
            }
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Save
            </button>
            @Html.ActionLink("Cancel", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}
