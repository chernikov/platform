@model IEnumerable<platformAthletic.Model.Training>
@{
    ViewBag.Title = "Training";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Training
</h2>
@Html.ActionLink("Create", "Create", "Training", null, new { @class = "btn" })
<table class="table">
    <thead>
        <tr>
            <th>#
            </th>
            <th>Name
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Training", new { id = item.ID }, new { @class = "btn" })
                @Html.ActionLink("Remove", "Delete", "Training", new { id = item.ID }, new { @class = "btn" })
            </td>
        </tr>
    }
</table>
