@model platformAthletic.Models.ViewModels.AboutView
@{
    ViewBag.Title = Model.ID == 0 ? "Add About" : "Edit About";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>@(Model.ID == 0 ? "Add About" : "Edit About")</h2>
<p></p>
@using (Html.BeginForm("Edit", "About", FormMethod.Post, new { @class = "form-horizontal" }))
{
	<fieldset>
		@Html.Hidden("ID", Model.ID)

		
		<div class="control-group">
            <label class="control-label" for="Author">
                Author
			</label>
            <div class="controls">
				@Html.TextBox("Author", Model.Author)
				@Html.ValidationMessage("Author")
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Text">
                Text
			</label>
            <div class="controls">
				@Html.TextArea("Text", Model.Text, new {@class = "textarea"})
				@Html.ValidationMessage("Text")
            </div>
        </div>
	   <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Save
			</button>
            @Html.ActionLink("Cancel", "Index", null, null, new { @class = "btn" })
        </div>
	</fieldset>
}
