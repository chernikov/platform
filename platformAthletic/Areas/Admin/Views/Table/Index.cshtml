@model platformAthletic.Models.Info.ScheduleTableInfo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        body {
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Team / Group</th>
                    @{
                        var currentDate = Model.StartDate;
                    }
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <th>@currentDate.ToString("MM/dd/yy")</th>
                        currentDate = currentDate.AddDays(7);
                    }
                </tr>
            </thead>
            @foreach (var item in Model.List)
            {
                <tr>
                    <td>
                        @if (item.Group != null)
                        {
                            <text>&nbsp;&nbsp;&nbsp;&nbsp;</text> @item.Group.Name
                        }
                        else
                        {
                            @item.Team.Name
                        }
                    </td>
                    @foreach (var scheduleItem in item.Schedules)
                    {
                        if (scheduleItem.UserSeason != null)
                        {
                            <td style="background-color : @scheduleItem.StrColor; font-weight: @(item.Group != null ? "normal": "bold");"><small>@scheduleItem.UserSeason.ID @(scheduleItem.UserSeason.SeasonID == 1 ? "OFF" : "IN")</small> @scheduleItem.Macrocycle.Week.Number</td>
                        }
                        else
                        {
                            <td style="background-color : @scheduleItem.StrColor"></td>
                        }
                    }
                </tr>
            }
        </table>
    </div>
</body>
</html>
