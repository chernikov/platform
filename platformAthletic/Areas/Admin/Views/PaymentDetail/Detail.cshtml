@model platformAthletic.Model.PaymentDetail
@{
    ViewBag.Title = "Payment Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Payment Detail</h2>
<p></p>

<dl class="dl-horizontal">
    <dt>#</dt>
    <dd>@Model.ID</dd>
    <dt>User</dt>
    <dd>@Model.User.FirstName &nbsp;@Model.User.LastName</dd>
    <dt>Phone</dt>
    <dd>@Model.User.PhoneNumber &nbsp;</dd>
    <dt>Team</dt>
    <dd>@((Model.User.Team ?? Model.User.OwnTeam) != null ? (Model.User.Team ?? Model.User.OwnTeam).Name : "")&nbsp;
    </dd>
    <dt>Code</dt>
    <dd>@Model.ReferralCode &nbsp;</dd>
    <dt>Amount</dt>
    <dd>@Model.Amount &nbsp;</dd>
    <dt>Description</dt>
    <dd>@Model.Description &nbsp;</dd>
    <dt>Created Date</dt>
    <dd>@Model.AddedDate.ToString("d") &nbsp;</dd>
    <dt>Processed Date</dt>
    <dd>@Model.ProcessedDate.Value.ToString("d") &nbsp;</dd>
    <dt>Processed Info</dt>
    <dd><strong>@Model.Result</strong>&nbsp;</dd>

</dl>

@Html.ActionLink("Back", "Index", null, null, new { @class = "btn" })