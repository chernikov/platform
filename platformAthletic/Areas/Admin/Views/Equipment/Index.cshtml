@model IEnumerable<platformAthletic.Model.Equipment>

@{
    ViewBag.Title = "Equipment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>
	Equipment
</h2>
@Html.ActionLink("Create", "Create", "Equipment", null, new { @class = "btn" })
<table class="table">
	<thead>
		<tr>
			<th>
					#
			</th>
			<th>
				Name
			</th>
			<th>
			</th>
		</tr>
	</thead>
	
	@foreach(var item in Model) {
	<tr>
		<td> 
			@item.ID
		</td>
		<td> 
			@item.Name
		</td>		
		<td>
			@Html.ActionLink("Edit", "Edit", "Equipment", new { id = item.ID }, new { @class = "btn" })
            @Html.ActionLink("Remove", "Delete", "Equipment", new { id = item.ID }, new { @class = "btn" })
		</td>
	</tr>
	}
</table>
